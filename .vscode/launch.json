    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Jest Tests",
            "runtimeVersion": "16.13.1",
            "args": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/.bin/jest",
                "--runInBand",
                "--clearCache",
                "--detectOpenHandles",
                "--config",
                "${workspaceRoot}/jest.config.js"
            ],
            "windows": {
                "args": [
                    "--inspect-brk",
                    "${workspaceRoot/node_modules/jest/bin/jest.ts",
                    "--runInBand",
                    "--config",
                    "${workspaceRoot}/jest/config.js"
                ]
            }
        }
    ]
}